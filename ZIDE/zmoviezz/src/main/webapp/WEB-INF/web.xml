        	<filter-name>AppFilter</filter-name>
        	<filter-class>com.zmovizz.filters.Authorize</filter-class>
        </filter>
        
      <filter-mapping>
        	<filter-name>AppFilter</filter-name>
        	<url-pattern>/*</url-pattern>
        </filter-mapping> -->
</web-app>

